@model IEnumerable<Capstone.Models.DbModels.Utenti>

@{
    ViewBag.Title = "Index";
}

<h1 class="NomeDettaglio">Utenti</h1>



<div class="tableContainer">

    <table id="cardEvent" class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ruolo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ruolo)
                </td>


                <td id="BtnEliDetaEdit">

                    <a href="@Url.Action("Details", new { id = item.Id })"><i class="bi bi-search"></i></a>

                    <a href="@Url.Action("Edit", new { id = item.Id })"><i class="bi bi-pencil-square"></i></a>

                    <a href="@Url.Action("Delete", new { id = item.Id })"><i class="bi bi-trash3"></i></a>

                </td>


            </tr>
        }

    </table>

</div>
