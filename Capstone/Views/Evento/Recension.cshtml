@model IEnumerable<Capstone.Models.DbModels.Recensioni>


<h1 id="cardEvent" class="RecensioneBt"  >Recensioni</h1>


<h4 id="CommentaBt">
    @Html.ActionLink("FeedBack", "Create", "Recensioni", new { area = "", id = ViewBag.Id }, new { @class = "text-reset text-decoration-none" })
</h4>

<div class="Animation3">

    @if (Model.Count() > 0)
    {

        <table class="table">


            <div class="row">

                @foreach (var item in Model)
                {
                    <div id="cardEvent" class="card cardCommt" style="width: 18rem;">
                        <div class="card-body">
                            <div class="TextCommt">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Utenti.Username)</h5>
                                <div class="dataCommt">
                                    @Html.DisplayFor(modelItem => item.Rating)
                                </div>
                            </div>
                            <p class="card-text"> @Html.DisplayFor(modelItem => item.Text)</p>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex justify-content-around my-2">

                                    <a href="@Url.Action("Edit", new { id = item.Id })"><i class="bi bi-pencil-square"></i></a>

                                    <a href="@Url.Action("Delete", new { id = item.Id })"><i class="bi bi-trash3"></i></a>

                                </div>
                            }

                        </div>
                    </div>


                }
            </div>

        </table>
    }
    else
    {
        <p> Nessuna Recensione... </p>
    }

</div>