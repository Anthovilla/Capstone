@model IEnumerable<Capstone.Models.DbModels.Commenti>


<h1 id="CommentiBt">
    Commenti
</h1>

<h4 id="CommentiBt" >
    @Html.ActionLink("Commenta", "Create", "Commenti", new { area = "", id = ViewBag.Id }, new { @class = "text-reset text-decoration-none" })
</h4>


<div class="Animation2"  >

    @if (Model.Count() > 0)
    {

        <table class="table">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Evento.Nome)
                    </th>*@

                <th>
                    Username
                </th>

                <th>
                    Data
                </th>
                <th>
                    Feedback
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Evento.Nome)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Utenti.Username)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>

                    <td>


                        <a href="@Url.Action("Edit", "Commenti", new {area = "", id = item.Id})">Edit</a>


                        <a href="@Url.Action("Delete", "Commenti", new {id = item.Id})">Delete</a>

                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p> Nessun Commento... </p>
    }

</div>