@model Capstone.Models.DbModels.Commenti

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Commenti", FormMethod.Post, new { id = "formContent", enctyype = "multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Commenti</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label for="Data" class="label-form">@Html.Raw("<strong>Data</strong>")</label>
        @Html.TextBoxFor(model => model.Data, "{0:yyyy-MM-dd}", new { type = "date" })
        @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="Text" class="label-form">@Html.Raw("<strong>Commenta</strong><span class='star'> *</span>")</label>
        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
    </div>




    @Html.HiddenFor(model => model.FKEventi, htmlAttributes: new { @Value = @ViewBag.Id })

    @Html.HiddenFor(model => model.FKUser, htmlAttributes: new { @Value = @ViewBag.Id })


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
